<%- include ('../includes/header') %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Farm</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Farmer</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <%- include ('../includes/sidebar') %>
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Edit Farmer</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form action="/farmer/data" method="post">
                <div class="card-body">
                    <div class="row">

                    
                 <div class="col-md-4">   
                  <div class="form-group">
                    <label for="exampleInputEmail1">Name</label>
                    <input type="text" class="form-control" id="farmer" placeholder="Enter Farmer name" name="farmer" value="<%= farmer[0].farmer %>">
                  </div>
                  
                  </div>
                  <div class="col-md-4"> 
                    <div class="form-group">
                        <label for="exampleInputEmail1">Select Farm</label>
                        <select class="form-control" name="farm_id">
                            <% for (i in farm) { %>
                                <option value="<%= farm[i].id %>" <%= farm[i].id==farmer[0].farm_id?'selected':''%>><%= farm[i].name %></option>
                               <% } %>
                        </select>
                      </div> 
                  </div>
                  <div class="col-md-4">   
                  <div class="form-group">
                    <label for="exampleInputEmail1">Address Line1</label>
                    <input type="text" class="form-control" id="addressLine1" placeholder="Enter Address Line1" name="addressLine1" value="<%= farmer[0].addressLine1  %>">
                  </div>
                  </div>
                  <div class="col-md-4">   
                    <div class="form-group">
                      <label for="exampleInputEmail1">Address Line2</label>
                      <input type="text" class="form-control" id="addressLine2" placeholder="Enter Address Line2" name="addressLine2" value="<%= farmer[0].addressLine2  %>">
                    </div>
                </div>
                <div class="col-md-4">   
                    <div class="form-group">
                      <label for="exampleInputEmail1">Locality</label>
                      <input type="text" class="form-control" id="txtPlaces" placeholder="Enter Locality" name="locality" value="<%= farmer[0].locality  %>">
                    </div>
                </div>
                <div class="col-md-4">   
                    <div class="form-group">
                      <label for="exampleInputEmail1">City</label>
                      <select class="form-control" name="cityID">
                            <% for (i in city) { %>
                            <option value="<%= city[i].id %>"><%= city[i].name %></option>
                           <% } %>
                      </select>
                    </div>
                </div>
                </div>
            </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
            <!-- /.card -->


          </div>
          <!--/.col (left) -->
         
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
    
  </div>
  <%- include ('../includes/footer') %>