<%- include ('../includes/header') %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Flock</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">flock</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <%- include ('../includes/sidebar') %>
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Edit Flock </h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form action="/flock/data" method="post">
                <input type="hidden" name="id" value="<%= flock[0].id %>">
                <input type="hidden" name="version" value="<%= flock[0].version+1 %>">
                <div class="card-body">
                    <div class="row">

                 <div class="col-md-4">   
                  <div class="form-group">
                    <label for="exampleInputEmail1">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter flock" name="name" value="<%= flock[0].name %>">
                  </div>
                  
                  </div>
                  <div class="col-md-4"> 
                    <div class="form-group">
                        <label for="exampleInputEmail1">Quantity</label>
                        <input type="text" class="form-control" id="quantity" placeholder="Enter Quantity" name="quantity" value="<%= flock[0].quantity %>">
                      </div> 
                  </div>
                  <div class="col-md-4">   
                  <div class="form-group">
                    <label for="exampleInputEmail1">Type</label>
                    <select class="form-control" name="flock_type">
                        <option value="1" <%= flock[0].flock_type==1?'selected':'' %>>Milled</option>
                        <option value="2" <%= flock[0].flock_type==2?'selected':'' %>>Cut</option>
                    </select>
                  </div>
                  </div>
                </div>
            </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
            <!-- /.card -->


          </div>
          <!--/.col (left) -->
         
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
    
  </div>